{
  "options": {
    "merge-default-rules": false,
    "formatter": "html",
    "output-file": "linters/sass-lint.html",
    "max-warnings": 0
  },
  "files": {
    "include": "**/*.s+(a|c)ss",
    "ignore": [
      "node_modules/**/*.*"
    ]
  },
  "rules": {
    "extends-before-mixins": 2,
    "extends-before-declarations": 2,
    "zero-unit": [
      2,
      {
        "include": false
      }
    ],
    "attribute-quotes": true,
    "border-zero": "none",
    "placeholder-in-extend": 2,
    "mixins-before-declarations": [
      2,
      {
        "exclude": [
          "breakpoint",
          "mq"
        ]
      }
    ],
    "hex-length": "long",
    "no-color-hex": 2,
    "no-color-keywords": 2,
    "no-color-literals": 2,
    "no-debug": 2,
    "class-name-format": {
      "allow-leading-underscore": true,
      "convention": "hyphenatedlowercase"
    },
    "function-name-format": {
      "allow-leading-underscore": false,
      "convention": "camelcase"
    },
    "mixin-name-format": {
      "allow-leading-underscore": false,
      "convention": "camelcase"
    },
    "property-units": {
      "global": "rem",
      "per-property": {
        "border": "px",
        "border-radius": "px",
        "border-width": "px",
        "box-shadow": "px"
      }
    },
    "quotes": {
      "style": "double"
    },
    "placeholder-name-format": {
      "allow-leading-underscore": false,
      "convention": "camelcase"
    },
    "force-pseudo-nesting": 2,
    "force-element-nesting": 2,
    "clean-import-paths": {
      "leading-underscore": false,
      "filename-extension": false
    },
    "no-warn": 1,
    "declarations-before-nesting": true,
    "empty-args": false,
    "empty-line-between-blocks": {
      "include": true,
      "allow-single-line-rulesets": false
    },
    "final-newline": {
      "include": false
    },
    "force-attribute-nesting": 2,
    "brace-style": {
      "style": "stroustrup",
      "allow-single-line": false
    },
    "no-invalid-hex": 2,
    "no-ids": 2,
    "no-duplicate-properties": 2,
    "no-empty-rulesets": 2,
    "no-important": 2,
    "no-misspelled-properties": 2,
    "no-trailing-whitespace": 2,
    "one-declaration-per-line": 2,
    "no-trailing-zero": 2,
    "leading-zero": false,
    "hex-notation": [
      2,
      {
        "style": "uppercase"
      }
    ],
    "max-file-line-count": 500,
    "max-line-length": {
      "length": 80
    },
    "indentation": [
      2,
      {
        "size": 2
      }
    ],
    "property-sort-order": [
      1,
      {
        "order": [
          "display",
          "margin"
        ],
        "ignore-custom-properties": true
      }
    ],
    "single-line-per-selector": 2,
    "shorthand-values": 2,
    "trailing-semicolon": 2,
    "url-quotes": 2,
    "space-after-colon": 2,
    "space-after-comma": 2,
    "space-around-operator": 2,
    "space-before-bang": 2,
    "variable-name-format":[
      2,
      {
        "allow-leading-underscore": true,
        "convention": "hyphenateduppercase",
      }
    ],
    "variable-for-property": [
      2,
      {
        "properties": [
          "box-shadow",
          "font-size",
          "border-color",
          "border-radius",
          "background-color",
          "color"
        ]
      }
    ]
  }
}
